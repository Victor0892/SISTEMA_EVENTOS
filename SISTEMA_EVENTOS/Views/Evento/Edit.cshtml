@model SISTEMA_EVENTOS.MODEL.Models.Evento

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Evento</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" type="hidden" />
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrganizadorId" class="control-label"></label>
                <input asp-for="OrganizadorId" class="form-control" />
                <span asp-validation-for="OrganizadorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocalId" class="control-label"></label>
                <input asp-for="LocalId" class="form-control" />
                <span asp-validation-for="LocalId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar Dados" class="btn btn-primary" style="margin-top: 20px;" />
            </div>
        </form>
    </div>
</div>

<div class="alert-info">
    @{
        if (ViewData["Mensagem"] != null)
        {
            @ViewData["Mensagem"]
            ;
        }
    }
</div>
<div class="alert-danger">
    @{
        if (ViewData["MensagemErro"] != null)
        {
            @ViewData["MensagemErro"]
            ;
        }
    }
</div>

<div style="margin-top: 20px;">
    <a class="btn btn-secondary" asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
